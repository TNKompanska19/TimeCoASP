@using TimeCo.Service.Vacations.Models
@model List<VacationDTO>

<!-- Include Bootstrap CSS (if using Bootstrap) -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<style>
    .card {
        border: 1px solid #ccc;
        border-radius: 8px;
        transition: box-shadow 0.3s;
    }

        .card:hover {
            box-shadow: 0 0 11px rgba(33, 33, 33, 0.2);
        }
</style>


<div class="container">
    <div class="row">
        @foreach (var vacation in Model)
        {
            if(vacation.Status=="Pending")
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@vacation.Name</h5>
                            <p class="card-text">@vacation.Description</p>
                            <p class="card-text"><strong>Start Date:</strong> @vacation.StartDate</p>
                            <p class="card-text"><strong>End Date:</strong> @vacation.EndDate</p>
                            <form method="post" action="@Url.Action("ApproveVacation", "VacationHandle")">
                                <input type="hidden" name="name" value="@vacation.Name" />
                                <button type="submit" class="btn btn-success">Approve</button>
                            </form>
                            <form method="post" action="@Url.Action("DenyVacation", "VacationHandle")">
                                <input type="hidden" name="name" value="@vacation.Name" />
                                <button type="submit" class="btn btn-danger">Deny</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

